<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:RummyBooky.Pages"
             xmlns:viewmodels="clr-namespace:RummyBooky.ViewModels"
             xmlns:models="clr-namespace:RummyBooky.Models"
             xmlns:views="clr-namespace:RummyBooky.Views"
             x:Class="RummyBooky.Pages.GeneralPopupPage"
             x:DataType="viewmodels:GeneralPopupViewModel"
             x:TypeArguments="viewmodels:GeneralPopupViewModel"
             BackgroundColor="{AppThemeBinding Light={x:StaticResource White}, Dark={x:StaticResource Black}}"
             >
    <VerticalStackLayout>
        <Label Text="{Binding Title}" />
        <Label Text="{Binding Message}"/>
         
        <Button Text="Okay" Command="{Binding OkayClickedCommand}"  />
        <Button Text="Cancel" Command="{Binding CancelClickedCommand}" />
    </VerticalStackLayout>
</pages:BasePopupPage>
